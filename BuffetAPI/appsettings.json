{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "BuffetAPIContext": "Server=(localdb)\\mssqllocaldb;Database=BuffetAPIContext04;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JWT": {
    "Issuer": "BuffetAPI",
    "Audience": "BuffetAPIClient",
    "DurationInMinutes": 45,
    "Secret": "Ma super clé secrète pour signer des jetons JWT"
  }

}